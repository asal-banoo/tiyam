@{
    ViewData["Title"] = "صفحه اصلی";
}

@section Styles{
    <style>
        #city ~ .nice-select {
            z-index: 14;
        }

        #percent ~ .nice-select {
            z-index: 13;
        }

        #ParentCategory ~ .nice-select {
            z-index: 12;
        }

        #CategoryId ~ .nice-select {
            z-index: 11;
        }

        .carousel-caption {
            padding: 10px 0;
            background: rgba(31,31,31,.41)
        }
    </style>
}

<div class="container under-nav">
    <div class="row justify-content-center" id="carousel">
        <div class="col-md-12">
            <div id="carouselExampleControls" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleControls" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleControls" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block" src="~/Content/images/banner3.svg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>بهترین را از ما بخوایید</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="~/Content/images/banner2.svg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>انجام پروژه ها</h5>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <i class="now-ui-icons arrows-1_minimal-left"></i>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <i class="now-ui-icons arrows-1_minimal-right"></i>
                </a>
            </div>
        </div>
    </div>
    <br />
    <div class="loading-wrapper">
        <div id="loading">
            @*<img src="~/Content/images/loading3.svg"/>*@
        </div>
        <div class="row">
            <form class="col-sm-6" method="get" action="/search" id="search-form">
                <div class="input-group form-group-no-border">
                    <input type="text" name="q" class="form-control" placeholder="جستجو در آگهی ها">
                    <button class="input-group-addon" type="submit">
                        <i class="now-ui-icons ui-1_zoom-bold"></i>
                    </button>
                </div>
            </form>
            <div class="col-sm-6">
                <div class="form-group">
                    <div>
                        <select id="city" class="wide">
                            <option value="">همه شهرها</option>
                            <option value="بجنورد">بجنورد</option>
                            <option value="مشهد">مشهد</option>
                            <option value="شیراز">شیراز</option>
                            <option value="قشم">قشم</option>
                            <option value="کیش">کیش</option>
                            <option value="کرمان">کرمان</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <br />
        @{Models.DataContext db = new Models.DataContext();}
        <div id="ads-wrapper" class="row justify-content-center">
            @Html.Partial("_List", db.Products.ToList())
        </div>
    </div>
</div>
